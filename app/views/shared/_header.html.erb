<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <div class="drop-down-nav", id="js-list">
      <%= link_to 'カテゴリー', "#", class: "category-header", hovercolor:"#3ccace" %>
      <ul class='lists-left', id="js-pull-down">
        <li class="contents"><%= link_to 'レディース', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to 'メンズ', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to 'ベビー・キッズ', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to 'インテリア・住まい・小物', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to '本・音楽・ゲーム', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to 'おもちゃ・ホビー・グッズ', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to '家電・スマホ・カメラ', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to 'スポーツ・レジャー', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to 'ハンドメイド', "#", hovercolor:"#3ccace" %></li>
        <li class="contents"><%= link_to 'その他', "#", hovercolor:"#3ccace" %></li>
      </ul>
    </div>
    <ul class='lists-right'>
      <% if user_signed_in? %>
       <li><%= link_to current_user.nickname, user_path(current_user), class: "user-nickname" %></li> 
       <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>